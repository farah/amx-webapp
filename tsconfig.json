{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "paths": {
    "@/*": [
      "src/*"
    ],
    "@redux/*": [
      "src/redux/*"
    ],
    "@components/*": [
      "src/components/*"
    ],
    "@utils": [
      "src/redux/*"
    ],
    "@transferwise-ui/*": [
      "src/transferwise-ui/*"
    ],
    "*": [
      "src/*",
      "node_modules/*"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "src/@transferwise-ui"
  ],
  "include": [
    "src",
    "types"
  ]
}
